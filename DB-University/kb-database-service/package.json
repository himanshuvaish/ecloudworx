{
  "name": "ecloudworx-kb-db-service",
  "version": "1.0.0",
  "type": "module",
  "description": "Database microservice for eCloudWorx University Knowledge Base",
  "main": "server/index.js",
  "scripts": {
    "dev": "tsx server/index.ts",
    "build": "esbuild server/index.ts server/routes.ts server/db.ts shared/schema.ts --platform=node --packages=external --bundle --format=esm --outdir=dist --entry-names=[name]",
    "start": "node dist/index.js",
    "db:push": "drizzle-kit push",
    "db:seed": "tsx server/seed.ts"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.10.4",
    "drizzle-orm": "^0.39.1",
    "drizzle-zod": "^0.7.0",
    "express": "^4.21.2",
    "zod": "^3.24.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/express": "4.17.21",
    "@types/node": "20.16.11",
    "@types/ws": "^8.5.13",
    "drizzle-kit": "^0.30.4",
    "esbuild": "^0.25.0",
    "tsx": "^4.19.1",
    "typescript": "5.6.3"
  }
}